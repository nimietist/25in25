{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    // Strict mode
    "strict": [2, "never"],

    // Code style
    "indent": [2, 2],
    "no-unused-vars": [0],
    "quotes": [2, "single", "avoid-escape"]
  },
  "ecmaFeatures": {
    "jsx": true
  }
}
